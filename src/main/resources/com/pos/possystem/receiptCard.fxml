<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="75.0" prefWidth="300.0" styleClass="receiptCnt" stylesheets="@receiptcard.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.pos.possystem.ReceiptCardController">
   <children>
      <HBox prefHeight="75.0" prefWidth="300.0">
         <children>
            <VBox prefHeight="75.0" prefWidth="136.0">
               <children>
                  <Label fx:id="item_name" alignment="BOTTOM_CENTER" prefHeight="42.0" prefWidth="136.0" text="Item">
                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="item_total_qty" alignment="TOP_CENTER" prefHeight="31.0" prefWidth="136.0" text="200g" textAlignment="CENTER" />
               </children>
            </VBox>
            <Label fx:id="discount" prefHeight="79.0" prefWidth="28.0" text="-5%" />
            <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="75.0" prefWidth="42.0" text="Rs." />
            <Label fx:id="tot_price" prefHeight="75.0" prefWidth="71.0" text="3000">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="28.0" styleClass="rmvBtn" text="x">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
