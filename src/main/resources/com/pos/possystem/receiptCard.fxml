<AnchorPane id="AnchorPane" prefHeight="75.0" prefWidth="401.0" styleClass="receiptCnt" stylesheets="@receiptcard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.possystem.ReceiptCardController">
   <children>
      <HBox prefHeight="75.0" prefWidth="406.0">
         <children>
            <VBox prefHeight="75.0" prefWidth="176.0">
               <children>
                  <Label fx:id="item_name" alignment="BOTTOM_LEFT" contentDisplay="RIGHT" graphicTextGap="10.0" prefHeight="42.0" prefWidth="166.0" text="Item" textOverrun="WORD_ELLIPSIS" wrapText="true">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="item_total_qty" alignment="TOP_LEFT" prefHeight="31.0" prefWidth="166.0" text="200g" textAlignment="CENTER" />
               </children>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </VBox>
            <Label fx:id="discount" prefHeight="79.0" prefWidth="28.0" text="0%" />
            <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="75.0" prefWidth="21.0" text="Rs." />
            <Label fx:id="tot_price" prefHeight="75.0" prefWidth="57.0" text="3000">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <Button fx:id="clear_item_btn" mnemonicParsing="false" prefHeight="75.0" prefWidth="55.0" styleClass="rmvBtn">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconLiteral="fltfal-dismiss-28" iconSize="12" selectionFill="BLACK" strokeWidth="2.0" textAlignment="RIGHT" wrappingWidth="16.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontIcon>
               </graphic>
              
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
